<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.slfinalproject.board.repository.BoardMapper">
    <resultMap id="boardMap" type="com.slfinalproject.board.domain.Board">
        <result property="boardNo" column="board_id"/>
        <result property="hit" column="hit"/>
        <result property="regDate" column="reg_date"/>
        <result property="recommend" column="recommend"/>
    </resultMap>

    <insert id="save">
        INSERT INTO tbl_board
        (writer, title, content, account)
        VALUES (#{writer}, #{title}, #{content}, #{account})
    </insert>

    <select id="selectAll" resultType="boardMap">
        select * from board
    </select>


</mapper>