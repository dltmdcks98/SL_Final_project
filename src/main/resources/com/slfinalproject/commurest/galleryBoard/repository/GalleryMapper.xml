<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.slfinalproject.commurest.galleryBoard.repository.GalleryMapper">
    
    <resultMap id="galleryMap" type="com.slfinalproject.commurest.galleryBoard.domain.Tag">
        <result property="tagId" column="tag_id"/>
        <result property="tagValue" column="tag_value"/>
        <result property="boardId" column="board_no"/>
        <result property="userId" column="user_id"/>
    </resultMap>
    
    <select id="getTagValue" resultType="String">
        SELECT tag_value FROM tag WHERE tag_id=#{tagId}
    </select>

    <select id="getTagValueByUserId" resultMap="galleryMap">
        SELECT tag_value,user_id FROM tag WHERE user_id=#{userId}
    </select>

    <insert id="setTagValue">
        INSERT INTO tag(tag_value) VALUES (#{tagValue})
    </insert>

    <insert id="setTagValueByBoardNo">
        INSERT INTO tag(tag_value,board_no) VALUES (#{tagValue},${boardNo})
    </insert>

    <insert id="setTagValueByUserId">
        INSERT INTO tag(tag_value,user_id) VALUES (#{tagValue},${userId})
    </insert>

</mapper>